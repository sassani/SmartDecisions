{
  "$schema": "http://json.schemastore.org/ocelot",
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:101"
  },
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/{any}",
      "UpstreamPathTemplate": "/api/{any}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 301
        }
      ],
      "UpstreamHttpMethod": [ "Get", "POST", "PUT", "DELETE", "PATCH" ],
      "AuthenticationOptions": {
        "AllowedScopes": [],
        "AuthenticationProviderKey": "strongKey"
      }
    },
    {
      "DownstreamPathTemplate": "/{any}",
      "UpstreamPathTemplate": "/identity/{any}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 201
        }
      ],
      "UpstreamHttpMethod": [ "Get", "POST", "PUT", "DELETE", "PATCH" ]
    }
  ]
}