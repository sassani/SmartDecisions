{
  "$schema": "http://json.schemastore.org/ocelot",
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:1001"
  },
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/{any}",
      "UpstreamPathTemplate": "/api/{any}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "UpstreamHttpMethod": [ "Get", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AllowedScopes": [],
        "AuthenticationProviderKey": "strongKey"
      }
    },
    {
      "DownstreamPathTemplate": "/{any}",
      "UpstreamPathTemplate": "/suser/{any}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "UpstreamHttpMethod": [ "Get", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AllowedScopes": [],
        "AuthenticationProviderKey": "strongKey"
      }
    }
  ]
}